@model ImageSharing.Models.LoginModel
@{
    ViewBag.Title = "ApplyRegisterPage";
}

@section Body{
<h2>Apply</h2>

@using (Html.BeginForm("ApplyRegister", "Home"))
{
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)
    <br />
    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)
    <br />
    @Html.ActionLink("Forgot your password?", "RecoveryPage")
    <br />
    <input type="submit" value="submit" />
}
    <h2>@ViewBag.Message</h2>
}